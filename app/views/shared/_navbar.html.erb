<div class="navbar-lewagon mb-4">
  <div class="nav-left">
    <span><%= link_to cl_image_tag("v1605715062/Costume_Carousel_black_jnj4lb.png", width: 150, height: 40), root_path %></span>
    <%= form_tag costumes_path, method: :get do %>
      <div class= "search">
        <%= text_field_tag :query, params[:query], class: "form-control"%>
        <%= button_tag type: 'submit', class: "btn btn-primary postfix" do %>
          <i class="fas fa-search" aria-hidden="true"></i>
        <% end %>
      </div>
    <% end %>    
  </div>


  <div>
    <%= link_to "See all costumes", costumes_path, class: "my-navbar-action" %> |
    <%= link_to "Dashboard", dashboard_index_path, class: "my-navbar-action"%> |
      <% if user_signed_in? %>
        <span class="my-navbar-action">User: <%= current_user&.email %></span>
        <% if current_user&.lender %>
          <span class="my-navbar-action">Role: Lender</span>
          <% else %>
          <span class="my-navbar-action">Role: Rentee</span>
        <% end %>
      <% end %>
    <%= link_to "+ Create costume", new_costume_path, class: "btn btn-primary ml-3" %>
  </div>
</div>
